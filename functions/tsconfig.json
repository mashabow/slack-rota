{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "jsx": "react",
    "jsxFactory": "JSXSlack.h",
    // node_modules/@slack-wrench/jest-mock-web-client/lib/index.d.ts で型エラーが出るので無視する
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": ["src"]
}
